<Window x:Class="Ikiflow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ikiflow"
        Width="560"
        Height="480"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6"
        FontFamily="Segoe UI">

    <Grid>

        <!-- MAIN CARD -->
        <Border
            Margin="24"
            Background="White"
            CornerRadius="14"
            BorderBrush="#E5E7EB"
            BorderThickness="1">

            <Grid>

                <!-- TOP BAR -->
                <Grid Height="56" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="20,12,0,0">
                        <TextBlock
                            Text="Ikiflow"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="#111827"/>

                        <TextBlock
                            Text="Focus · Rest · Repeat"
                            FontSize="11"
                            Foreground="#6B7280"/>
                    </StackPanel>

                    <!-- SETTINGS PLACEHOLDER -->
                    <Button
                        Grid.Column="1"
                        Width="36"
                        Height="36"
                        Margin="0,10,16,0"
                        ToolTip="Settings (coming soon)"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                        <TextBlock
                            Text="⚙"
                            FontSize="16"
                            Foreground="#374151"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Button>
                </Grid>

                <!-- CONTENT -->
                <StackPanel Margin="20,72,20,20">

                    <!-- SCREEN TIME -->
                    <TextBlock
                        Text="Screen Time"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#111827"/>

                    <Slider
                        x:Name="IntervalSlider"
                        Minimum="5"
                        Maximum="60"
                        Value="30"
                        TickFrequency="5"
                        IsSnapToTickEnabled="True"
                        Margin="0,6,0,4"
                        ValueChanged="IntervalSlider_ValueChanged"/>

                    <TextBlock
                        x:Name="IntervalLabel"
                        Text="30 min"
                        FontSize="12"
                        Foreground="#374151"
                        Margin="0,0,0,18"/>

                    <!-- BREAK TIME -->
                    <TextBlock
                        Text="Break Time"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#111827"/>

                    <StackPanel Orientation="Horizontal" Margin="0,6,0,4">
                        <Slider
                            x:Name="BreakSlider"
                            Minimum="10"
                            Maximum="600"
                            Value="300"
                            TickFrequency="10"
                            Width="320"
                            ValueChanged="BreakSlider_ValueChanged"/>

                        <TextBox
                            x:Name="BreakInput"
                            Width="64"
                            Margin="12,0,0,0"
                            VerticalContentAlignment="Center"
                            Text="300"
                            TextChanged="BreakInput_TextChanged"/>
                    </StackPanel>

                    <TextBlock
                        x:Name="BreakLabel"
                        Text="300 sec"
                        FontSize="12"
                        Foreground="#374151"
                        Margin="0,0,0,24"/>

                    <!-- ACTIONS -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                        <!-- Pause Button -->
                        <Button
                            x:Name="PauseBtn"
                            Content="Pause"
                            Width="90"
                            Height="34"
                            Margin="0,0,8,0"
                            Click="PauseBtn_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        CornerRadius="6"
                                        BorderBrush="#D1D5DB"
                                        BorderThickness="1"
                                        Background="{TemplateBinding Background}">
                                        <ContentPresenter
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Start Button -->
                        <Button
                            x:Name="StartBtn"
                            Content="Start"
                            Width="90"
                            Height="34"
                            Background="#111827"
                            Foreground="White"
                            Click="StartBtn_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        CornerRadius="6"
                                        Background="{TemplateBinding Background}">
                                        <ContentPresenter
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- STATUS -->
                    <Separator Margin="0,24,0,16"/>

                    <TextBlock
                        x:Name="StatusText"
                        Text="Status: Ready"
                        FontSize="13"
                        Foreground="#374151"/>

                    <TextBlock
                        x:Name="CountdownText"
                        Text="Next: --"
                        FontSize="14"
                        Foreground="#111827"
                        Margin="0,4,0,0"/>

                    <!-- TEST BUTTON -->
                    <Button
                        x:Name="TestOverlayButton"
                        Content="Test Overlay"
                        Width="120"
                        Height="32"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Left"
                        Click="TestOverlayButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    CornerRadius="6"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
