<Window x:Class="Ikiflow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ikiflow"
        Width="520"
        Height="420"
        WindowStartupLocation="CenterScreen"
        Background="#F6F7F9"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <StackPanel>

            <!-- App Title -->
            <TextBlock Text="Ikiflow"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#111827"
                       Margin="0 0 0 20"/>

            <!-- Screen Time -->
            <TextBlock Text="Screen Time (minutes)"
                       FontWeight="SemiBold"
                       Foreground="#111827"/>

            <Slider x:Name="IntervalSlider"
                    Minimum="5"
                    Maximum="60"
                    Value="30"
                    TickFrequency="5"
                    IsSnapToTickEnabled="True"
                    Margin="0 5 0 5"
                    ValueChanged="IntervalSlider_ValueChanged"/>

            <TextBlock x:Name="IntervalLabel"
                       Text="30 min"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       Margin="0 0 0 20"/>

            <!-- Break Time -->
            <!-- Break Time -->
        <TextBlock Text="Break Time (seconds)"
                FontWeight="SemiBold"
                Foreground="#111827"/>

        <StackPanel Orientation="Horizontal" Margin="0 5 0 5">
        <Slider x:Name="BreakSlider"
                Minimum="10"
                Maximum="600"
                Value="300"
                TickFrequency="10"
                Width="320"
                ValueChanged="BreakSlider_ValueChanged"/>

                <TextBox x:Name="BreakInput"
                        Width="60"
                        Margin="10 0 0 0"
                        Text="300"
                        TextChanged="BreakInput_TextChanged"/>
                </StackPanel>

                <TextBlock x:Name="BreakLabel"
                        Text="300 sec"
                        FontWeight="SemiBold"
                        Foreground="#374151"
                        Margin="0 0 0 20"/>


            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">

                <Button x:Name="StartBtn"
                        Content="Start"
                        Width="100"
                        Height="34"
                        Background="#111827"
                        Foreground="White"
                        Click="StartBtn_Click"/>

                <Button x:Name="PauseBtn"
                        Content="Pause"
                        Width="100"
                        Height="34"
                        Margin="10 0 0 0"
                        Click="PauseBtn_Click"/>
            </StackPanel>

            <!-- Status -->
            <TextBlock x:Name="StatusText"
                       Text="Status: Ready"
                       Margin="0 20 0 0"
                       Foreground="#374151"
                       FontWeight="SemiBold"/>

            <!-- Countdown -->
            <TextBlock x:Name="CountdownText"
                       Text="Next: --"
                       Margin="0 5 0 0"
                       Foreground="#374151"
                       FontSize="14"/>

            <!-- Test Overlay -->
            <Button x:Name="TestOverlayButton"
                    Content="Test Overlay"
                    Width="120"
                    Height="34"
                    Margin="0 20 0 0"
                    Click="TestOverlayButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
