<Window x:Class="Ikiflow.FloatingWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="200"
        Height="32">

    <Canvas Width="200" Height="32">

        <!-- Background Shape -->
        <Path
        Fill="White"
        Data="M 0,0 
            H 200 
            V 22 
            C 200,27.52 195.52,32 190,32 
            H 10 
            C 4.48,32 0,27.52 0,22 
            V 0 
            Z"/>

        <!-- Timer Text -->
        <TextBlock x:Name="WidgetTime"
                   Text="10:10"
                   FontFamily="Consolas"
                   FontSize="20"
                   FontWeight="Bold"
                   Canvas.Left="13"
                   Canvas.Top="5"/>

        <!-- Progress Bars Group -->
        <Canvas x:Name="BarsGroup">

            <!-- We keep the exact original bar positions from your SVG -->
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="81.04" Canvas.Top="5.60" Fill="Black" x:Name="Bar0"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="90.92" Canvas.Top="5.60" Fill="Black" x:Name="Bar1"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="100.80" Canvas.Top="5.60" Fill="Black" x:Name="Bar2"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="110.69" Canvas.Top="5.60" Fill="Black" x:Name="Bar3"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="120.57" Canvas.Top="5.60" Fill="Black" x:Name="Bar4"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="130.45" Canvas.Top="5.60" Fill="Black" x:Name="Bar5"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="140.34" Canvas.Top="5.60" Fill="Black" x:Name="Bar6"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="150.22" Canvas.Top="5.60" Fill="Black" x:Name="Bar7"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="160.10" Canvas.Top="5.60" Fill="Black" x:Name="Bar8"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="169.98" Canvas.Top="5.60" Fill="Black" x:Name="Bar9"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="179.87" Canvas.Top="5.60" Fill="Black" x:Name="Bar10"/>
            <Rectangle Width="3.68" Height="20.42" Canvas.Left="189.75" Canvas.Top="5.60" Fill="Black" x:Name="Bar11"/>

        </Canvas>

    </Canvas>
</Window>
